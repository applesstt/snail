include include/csrf
style.
  .paper-link {
    line-height: 18px;
    max-height: 36px;
    overflow: hidden;
    display: block;
  }
p.clearfix
  .row
    .col-md-4.col-md-offset-8
      a.btn.btn-primary.pull-right(ng-click='open()') 新建文章
.table-responsive
  table.table.table-striped
    thead
      tr
        th.col-md-4 文章标题
        th.col-md-2 文章关键字
        th.col-md-4 文章链接
        th.text-center.col-md-2 操作
    tbody
      tr(ng-repeat='paper in wrapData.papers')
        td.col-md-4
          div: a(href='{{paper.url}}', target='_blank') {{paper.name}}
        td.col-md-2
          span(ng-repeat='tag in paper.tags') {{tag}}&nbsp;
        td.col-md-4
          div: a.paper-link(href='{{paper.short_url || paper.url}}', target='_blank') {{paper.short_url || paper.url}}
        td.text-center.col-md-2
          button.btn-block.btn.btn-primary.btn-sm(ng-click='edit($index)') 编辑
include include/pagination