extends ../layout/layout
block content
  .row
    .col-md-4.col-md-offset-4
      form#upload-form.form-horizontal(role='form', method='post', url='/resetPassword',
        onsubmit='return ResetPassword.valid()', enctype='multipart/form-data')
        input(type='hidden', name='_csrf', value='#{csrf_token}')
        input(type='hidden', name='_method',value='put')
        .form-group
          input#old_password.form-control(name='old_password', type='password', required, pattern='.{6,}', title='不小于6位字符', placeholder='请输入旧密码')
        .form-group
          input#new_password.form-control(name='new_password', type='password', required, pattern='.{6,}', title='不小于6位字符', placeholder='请输入新密码')
        .form-group
          input#repeat_password.form-control(name='repeat_password', type='password', required, pattern='.{6,}', title='不小于6位字符', placeholder='重复新密码')
        .form-group
          button.btn.btn-success(type='submit') 保存
append js_content
  script(src='/js/resetPassword.js')